// login form //
    
#login-container{
	
	float center
	width 360px 
	margin-right auto
	margin-left auto
	
	label{
		margin -2px 0 5px 5px
	}
	button{
		width 300px
		padding 6px 40px 6px 40px
		float center
		margin-top 6px
	}
	.checkbox{
		margin 10px 0 0 180px
	}
	.btm-links{
		text-align center
		margin-top -30px
	}
	.outer{
		display table
		position absolute
		height 100%
		width 100%
	}
	.middle{
		display table-cell
		vertical-align middle
	}
	.inner{
		margin-left auto
		margin-right auto 
		width 360px
	}
	#create-account{
		float:right
		margin-right:2px
	}	
	#forgot-password{
		float:left
		margin-left:2px
	}
}

